{
  "manifest_version": 3,
  "name": "LinkedIn Slop Detector",
  "version": "1.0",
  "description": "Detects and filters LinkedIn slop posts using AI",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Slop Detector"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}